<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/product">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightness"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:fitsSystemWindows="true"
                 android:id="@+id/product_banner"
                app:layout_collapseMode="pin"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                app:layout_collapseMode="pin"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_gravity="bottom"
                android:layout_alignBottom="@+id/image"
                />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/prodname"/>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:paddingTop="0dp">



            <Spinner
                android:layout_height="wrap_content"
                android:id="@+id/spn_variation"
                android:layout_width="wrap_content"
                android:drawSelectorOnTop="true"
                android:prompt="@string/spin"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noresult"
                android:textColor="@color/colorAmber"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textAlignment="center"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true">

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/prdctname"
                android:textSize="18dp"
                android:textColor="@color/colorDarkness"
                android:textAlignment="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/prdctprice"
                android:textSize="18dp"
                android:textColor="@color/colorAmber"
                android:textAlignment="center"
                android:textStyle="bold"/>

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/prdctbidinc"
                    android:textSize="18dp"
                    android:textColor="@color/colorAmber"
                    android:textAlignment="center"
                    android:textStyle="bold"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/highestbid"
                        android:textSize="18dp"
                        android:textColor="@color/colorAmber"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/mytbid"
                        android:textSize="18dp"
                        android:textColor="@color/colorAmber"
                        android:textAlignment="center"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/prdctauc"
                        android:textSize="18dp"
                        android:textColor="@color/thatGreen"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/prdctid"
                        android:textSize="18dp"
                        android:textColor="@color/thatGreen"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/prdctlocation"
                        android:textSize="18dp"
                        android:textColor="@color/thatGreen"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/description"
                        android:textAlignment="center"
                        android:textStyle="bold"/>




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/instock"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"/>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/txtdays"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/txthours"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/txtmin"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/txtsec"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Amount: $"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/txtQnty"
                            android:inputType="number"
                            android:layout_weight="1"
                            android:hint="Amount"
                            android:textAlignment="center"
                            android:background="#00000000"
                            android:layout_margin="5dp"
                            />

                </LinearLayout>



                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="true">


                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="View bids"
                                android:background="@drawable/default_rounded"
                                android:textColor="@android:color/white"
                                android:layout_weight="1"

                                android:id="@+id/viewbids" />


                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Place Bid"
                            android:background="@drawable/default_rounded"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:id="@+id/placebid" />





                        </LinearLayout>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Back To Auction"
                            android:layout_weight="1"
                            android:background="@drawable/default_round_dark"
                            android:textColor="@android:color/white"
                            android:id="@+id/btn_product_back" />

                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

          </LinearLayout>



    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/bottom_bar" />

</LinearLayout>

</android.support.design.widget.CoordinatorLayout>