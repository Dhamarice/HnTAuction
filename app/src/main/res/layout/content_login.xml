<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hammerandtongues.online.hntauction.Login"
    tools:showIn="@layout/activity_login">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="368dp"
        android:layout_height="551dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/idcontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_launcher"/>

                <LinearLayout
                    android:id="@+id/input_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/defaultpadding20"
                    android:paddingRight="@dimen/defaultpadding20"
                    android:paddingTop="@dimen/activity_horizontal_margin">

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/roundcorner"
                        android:hint="username"
                        android:padding="15dp"/>


                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/roundcorner"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:paddingTop="@dimen/defaultpadding20"/>



                        <Button
                            android:id="@+id/btnlogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/default_rounded"
                            android:padding="15dp"
                            android:text="LOGIN"
                            android:textColor="#ecf0f1"/>

                    <LinearLayout
                        android:id="@+id/btnwrap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/offwhite"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="forgot password"
                            android:textSize="12dp"
                            android:background="@drawable/offwhite"
                            android:textColor="@color/colorPrimaryDark"
                            android:padding="15dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/btnforgot"
                            android:layout_weight="1"/>



                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Register"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:background="@drawable/offwhite"
                            android:padding="15dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/btnSignUp"
                            android:visibility="visible"/>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/defaultpadding20"
                    android:paddingRight="@dimen/defaultpadding20"
                    android:layout_below="@+id/imageView"
                    android:orientation="vertical"
                    android:id="@+id/forgotform"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter your email"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtuser"
                        android:layout_weight="1"/>





                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameoremailll"
                        android:hint="email"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:padding="15dp"
                        android:background="@drawable/roundcorner"
                        android:layout_gravity="center_horizontal"/>



                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset Password"
                        android:textColor="#ecf0f1"
                        android:background="@drawable/default_rounded"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/btnresend"
                        android:layout_weight="1"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/defaultpadding20"
                    android:paddingRight="@dimen/defaultpadding20"
                    android:layout_below="@+id/imageView"
                    android:orientation="vertical"
                    android:id="@+id/notifyform"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="An sms and an email with your new password has been sent. Please login and change this password as desired."
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtnotify"
                        android:layout_weight="1"/>




                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Go to login >>"
                        android:textColor="@color/colorPrimaryDark"
                        android:background="@drawable/offwhite"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/btnnotify"
                        android:layout_weight="1"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/inside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/welcum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/ewall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/addwarning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/add_add"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/default_rounded"
                                android:text="Add address"
                                android:textColor="#ecf0f1"/>

                            <Button
                                android:id="@+id/basicInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/default_rounded"
                                android:text="Basic Info"
                                android:textColor="#ecf0f1"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/shopping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/default_rounded"
                            android:text="GO TO SHOPPING"
                            android:textColor="#ecf0f1"/>

                        <Button
                            android:id="@+id/logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/default_rounded"
                            android:text="LOGOUT"
                            android:textColor="#ecf0f1"/>
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_container"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tione"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/BasicForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/uName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roundcorner"
                        android:hint="username"
                        android:padding="15dp"/>

                    <EditText
                        android:id="@+id/fName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/roundcorner"
                        android:hint="firstname"
                        android:padding="15dp"/>

                    <EditText
                        android:id="@+id/sName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/roundcorner"
                        android:hint="surname"
                        android:padding="15dp"/>

                    <EditText
                        android:id="@+id/eEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/roundcorner"
                        android:hint="email"
                        android:padding="15dp"/>

                    <Button
                        android:id="@+id/updat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/default_rounded"
                        android:padding="15dp"
                        android:text="Update"
                        android:textColor="#ecf0f1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset password"
                        android:textSize="18dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/pword_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/roundcorner"
                            android:hint="password"
                            android:inputType="textPassword"
                            android:padding="15dp"
                            android:paddingTop="@dimen/defaultpadding20"/>

                        <EditText
                            android:id="@+id/pword_confrim"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/roundcorner"
                            android:hint="confirm"
                            android:inputType="textPassword"
                            android:padding="15dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/bac"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/default_rounded"
                            android:padding="15dp"
                            android:text="Back"
                            android:textColor="#ecf0f1"/>

                        <Button
                            android:id="@+id/reset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/default_rounded"
                            android:padding="15dp"
                            android:text="Reset"
                            android:textColor="#ecf0f1"/>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/add_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please register your address details!."
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="15dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtaddadd"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/addressLn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/roundcorner"
                        android:hint="Address Line 1"
                        android:padding="15dp"/>

                    <EditText
                        android:id="@+id/addressLn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/roundcorner"
                        android:hint="Address Line 2"
                        android:padding="15dp"/>

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/roundcorner"
                        android:hint="Country"
                        android:padding="15dp"/>

                    <EditText
                        android:id="@+id/regionstate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/roundcorner"
                        android:hint="Region/State"
                        android:padding="15dp"/>

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/roundcorner"
                        android:hint="City"
                        android:padding="15dp"/>

                    <EditText
                        android:id="@+id/surbub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/roundcorner"
                        android:hint="Suburb"
                        android:padding="15dp"/>

                    <EditText
                        android:id="@+id/idno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/roundcorner"
                        android:hint="Id number"
                        android:padding="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/back"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/default_rounded"
                            android:padding="15dp"
                            android:text="Back"
                            android:textColor="#ecf0f1"/>

                        <Button
                            android:id="@+id/update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/default_rounded"
                            android:padding="15dp"
                            android:text="Save"
                            android:textColor="#ecf0f1"/>


                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>
